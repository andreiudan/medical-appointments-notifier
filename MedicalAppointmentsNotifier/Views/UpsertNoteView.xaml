<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MedicalAppointmentsNotifier.Views.UpsertNoteView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MedicalAppointmentsNotifier.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Adauga Mentiune">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid 
        x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="{x:Bind ViewModel.Title}" 
            FontSize="28"
            Style="{StaticResource TitleTextBlockStyle}"
            Grid.Row="0" 
            HorizontalAlignment="Center"
            Padding="24, 32, 24, 24"/>

        <StackPanel 
            Grid.Row="1"
            Padding="24, 0, 24, 16"
            Spacing="12">
            <TextBox 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Header="Descriere"
                Text="{x:Bind ViewModel.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock
                Foreground="{ThemeResource SystemErrorTextColor}"
                Text="{x:Bind ViewModel.DescriptionErrorMessage, Mode=OneWay}"
                Visibility="{Binding DescriptionErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
        </StackPanel>

        <StackPanel 
            Grid.Row="2"
            Padding="24, 0, 24, 24"
            Spacing="12">
            <Grid ColumnSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>

                <CalendarDatePicker 
                    PlaceholderText="Alege o data" 
                    Header="Din data" 
                    Grid.Column="0" 
                    HorizontalAlignment="Stretch"
                    Date="{x:Bind ViewModel.DateFrom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                    MinDate="{x:Bind ViewModel.Today}"/>
                <CalendarDatePicker 
                    PlaceholderText="Alege o data" 
                    Header="Pana in data" 
                    Grid.Column="1" 
                    HorizontalAlignment="Stretch"
                    Date="{x:Bind ViewModel.DateTo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                    MinDate="{x:Bind ViewModel.MinNextDate, Mode=OneWay}"/>
            </Grid>

            <TextBlock
                Foreground="{ThemeResource SystemErrorTextColor}"
                Text="{x:Bind ViewModel.DateIntervalErrorMessage, Mode=OneWay}"
                Visibility="{Binding DateIntervalErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
        </StackPanel>

        <Grid 
            Grid.Row="3" 
            ColumnSpacing="8" 
            Padding="24"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>

            <Button 
                x:Name="btnClose" 
                Content="Anuleaza" 
                Grid.Column="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                Click="btnClose_Click"/>
            <Button 
                Content="{x:Bind ViewModel.UpsertButtonText}" 
                Grid.Column="1" 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Command="{x:Bind ViewModel.UpsertNoteCommand}"/>
        </Grid>
    </Grid>
</Window>
