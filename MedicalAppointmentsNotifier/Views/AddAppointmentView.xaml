<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MedicalAppointmentsNotifier.Views.AddAppointmentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MedicalAppointmentsNotifier.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="AddAppointmentView">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid 
        x:Name="RootGrid"
        VerticalAlignment="Center"
        RowSpacing="18"
        Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Adauga Scrisoare Medicala" 
            FontSize="28" 
            FontWeight="SemiBold" 
            Grid.Row="0"
            HorizontalAlignment="Center"
            Margin="0, 0, 0, 32"/>

        <Grid Grid.Row="1" ColumnSpacing="18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>

            <ComboBox 
                Header="Specializarea Medicala"
                ItemsSource="{x:Bind ViewModel.MedicalSpecialties}"
                SelectedItem="{x:Bind ViewModel.Specialty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Grid.Column="0"
                HorizontalAlignment="Stretch">
            </ComboBox>
            <NumberBox 
                Header="Interval Consultatie"
                Text="{x:Bind ViewModel.DaysInterval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Grid.Column="1"
                SpinButtonPlacementMode="Inline"
                HorizontalAlignment="Stretch"/>
        </Grid>

        <Grid Grid.Row="2" ColumnSpacing="18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>

            <CalendarDatePicker 
                PlaceholderText="Alege o data" 
                Header="Din data" Grid.Column="0" 
                Date="{x:Bind ViewModel.LatestDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                HorizontalAlignment="Stretch"/>
            
            <CalendarDatePicker 
                PlaceholderText="Alege o data" 
                Header="Pana in data" Grid.Column="1" 
                HorizontalAlignment="Stretch"
                Date="{x:Bind ViewModel.NextDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                DateFormat="{}{day.integer}/{month.integer}/{year.full}"/>
        </Grid>

        <Grid Grid.Row="3" ColumnSpacing="12" Margin="0, 32, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnClose" Content="Anuleaza" Grid.Column="0" Click="btnClose_Click"/>
            <Button Content="Adauga" Grid.Column="1" HorizontalAlignment="Right" Command="{x:Bind ViewModel.AddAppointmentCommand}"/>
        </Grid>
    </Grid>
</Window>
